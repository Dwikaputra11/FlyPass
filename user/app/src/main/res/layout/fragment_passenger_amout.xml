<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppBottomSheetDialogTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.PassengerAmountFragment">

    <View
        android:id="@+id/view"
        android:layout_marginTop="5dp"
        android:background="@color/smokey_300"
        android:layout_width="30dp"
        android:layout_centerHorizontal="true"
        android:layout_height="2dp"/>

    <TextView
        android:layout_below="@id/view"
        android:id="@+id/textView"
        android:text="Passengger Amount"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/view1"
        android:background="@color/smokey_300"
        android:layout_below="@id/textView"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <NumberPicker
        android:id="@+id/npPassenger"
        android:layout_below="@id/view1"
        android:layout_width="100dp"

        android:solidColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelect"
        android:text="Select"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/radius_10dp"
        app:elevation="4dp"
        app:backgroundTint="@color/color_primary"
        android:layout_marginVertical="20dp"
        android:layout_below="@id/npPassenger"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>