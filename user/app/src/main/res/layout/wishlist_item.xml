<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="false"
    android:layout_margin="16dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/maskapai"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/air_asia"
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:id="@+id/llFlightDir"
            android:layout_toRightOf="@id/maskapai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvKeberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yogyakarta"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginStart="16dp"
                />

            <ImageView
                android:id="@+id/arrow"
                android:layout_toRightOf="@id/tvKeberangkatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_right_alt_15"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvTujuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yogyakarta"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_toRightOf="@id/arrow"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sat, 10 Dec 2022"
            android:layout_below="@id/llFlightDir"
            android:layout_toRightOf="@id/maskapai"
            android:layout_marginStart="18dp"
            />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cbShowMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:background="@drawable/radius_10dp"
            android:backgroundTint="@color/smokey_100"
            android:layout_alignParentEnd="true"
            android:padding="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"
            android:button="@drawable/show_more_arrow_state"
            app:buttonTint="@color/smokey_700"
            />

        <LinearLayout
            android:layout_below="@id/cbShowMore"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/rlDetail"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/view"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/smokey_300"/>

                <TextView
                    android:layout_below="@id/view"
                    android:textSize="12sp"
                    android:text="Garuda Indonesia"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/tvAirplaneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/llSeatClass"
                    android:layout_toEndOf="@id/tvAirplaneName"
                    android:layout_below="@id/view"
                    android:layout_marginHorizontal="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12sp"
                        android:text="("
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@id/view"
                        android:textSize="12sp"
                        android:text="Economy"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/tvSeatClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_below="@id/view"
                        android:textSize="12sp"
                        android:text=")"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/llIataDir"
                    android:layout_below="@id/tvAirplaneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvIataDepart"
                        android:textSize="12sp"
                        android:text="CGK"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView3"
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvIataArrive"
                        android:textSize="12sp"
                        android:text="SRG"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView4"
                        android:textSize="12sp"
                        android:paddingHorizontal="5dp"
                        android:text="(Direct)"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:layout_toEndOf="@id/llSeatClass"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                    android:id="@+id/llIataArrDir"
                    android:layout_below="@id/tvAirplaneName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvIataArrDepart"
                        android:textSize="12sp"
                        android:text="CGK"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView12"
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvIataArrArrive"
                        android:textSize="12sp"
                        android:text="SRG"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView13"
                        android:textSize="12sp"
                        android:paddingHorizontal="5dp"
                        android:text="(Direct)"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_below="@id/llIataDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDepartTime"
                        android:textSize="11sp"
                        android:text="06:55"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView5"
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView6"
                        android:textSize="11sp"
                        android:text="("
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvDuration"
                        android:textSize="11sp"
                        android:text="1h 10m"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView7"
                        android:textSize="11sp"
                        android:text=")"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/textView8"
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvArriveTime"
                        android:textSize="11sp"
                        android:text="08:15"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/llFlightTimeArr"
                    android:layout_marginBottom="5dp"
                    android:layout_toEndOf="@id/llSeatClass"
                    android:layout_below="@id/llIataArrDir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvArrDepartTime"
                        android:textSize="11sp"
                        android:text="06:55"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="11sp"
                        android:text="("
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvArrDuration"
                        android:textSize="11sp"
                        android:text="1h 10m"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="11sp"
                        android:text=")"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="14sp"
                        android:text="-"
                        android:paddingHorizontal="5dp"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvArrArriveTime"
                        android:textSize="11sp"
                        android:text="08:15"
                        android:textColor="@color/smokey_1000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 1.000.000"
                    android:textColor="#CD694A"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_below="@id/view1"
                    android:paddingTop="10dp"
                    />
                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/smokey_300"
                    />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>