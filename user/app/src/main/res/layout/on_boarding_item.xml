<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivOnBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/tvTitle"
        android:src="@drawable/ic_on_boarding_1"/>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:text="Anytime &amp; Anywhere"
        android:textSize="18sp"
        android:textColor="#23120B"/>
    <TextView
        android:id="@+id/tvMsg"
        android:layout_below="@id/tvTitle"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesan tiketmu kapanpun dan dimanapun kamu berada."
        android:textColor="#C4C4C4"
        android:textSize="12sp"
        android:layout_marginTop="12dp"/>
    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnGetStarted"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"
        android:background="@drawable/radius_10dp"
        app:backgroundTint="@color/color_primary"
        android:text="Get Started"
        android:textAllCaps="false"
        app:elevation="4dp"
        android:layout_marginHorizontal="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>