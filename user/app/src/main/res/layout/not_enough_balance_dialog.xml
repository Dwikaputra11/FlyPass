<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo Tidak Cukup !"
                android:textColor="@color/color_primary"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Silahkan isi saldo anda terlebih dahulu"
                android:textColor="@color/smokey_500"
                android:layout_below="@id/textView11"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnToTopUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ke Menu Top Up"
                android:layout_marginHorizontal="15dp"
                android:textAllCaps="false"
                android:layout_marginTop="100dp"
                />

            <TextView
                android:id="@+id/tvMaybeLater"
                style="@style/TextAppearance.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginHorizontal="15dp"
                android:text="Nanti Saja"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="100dp"
                android:layout_alignParentEnd="true"
                app:layout_constraintBottom_toBottomOf="@+id/btnToTopUp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>