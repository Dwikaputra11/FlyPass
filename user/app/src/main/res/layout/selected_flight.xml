<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_marginHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvDepArr"
                android:text="Depart"
                android:textColor="@color/smokey_1000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvPaxCount"
                android:layout_below="@id/tvDepArr"
                android:textColor="@color/smokey_700"
                android:textSize="12sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_below="@id/tvDepArr"
                android:textColor="@color/smokey_700"
                android:textSize="12sp"
                android:layout_toEndOf="@id/tvPaxCount"
                android:text="Pax"
                android:paddingHorizontal="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView6"
                android:textColor="@color/smokey_700"
                android:textSize="12sp"
                android:layout_toEndOf="@id/textView10"
                android:layout_below="@id/tvDepArr"
                android:text="|"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvFlightDirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvDepArr"
                android:layout_toEndOf="@id/textView6"
                android:text="Direct"
                android:textColor="@color/smokey_700"
                android:textSize="12sp" />
        </RelativeLayout>

        <View
            android:id="@+id/middleBorder"
            android:background="@color/smokey_300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="CGK"
                android:textColor="@color/smokey_1000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:id="@+id/iataDepartAirport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/smokey_1000"
                android:paddingHorizontal="8dp"
                android:text="-"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/iataDepartAirport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/iataArriveAirport"
                android:text="DPS"
                android:textStyle="bold"
                android:layout_toEndOf="@id/textView7"
                android:textColor="@color/smokey_1000"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDepartCity"
                android:text="Jakarta"
                android:layout_below="@id/iataDepartAirport"
                android:textColor="@color/smokey_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView8"
                android:text="-"
                android:layout_toEndOf="@id/tvDepartCity"
                android:layout_below="@id/iataDepartAirport"
                android:textColor="@color/smokey_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvArriveCity"
                android:layout_toEndOf="@id/textView8"
                android:text="Denpasar"
                android:layout_below="@id/iataDepartAirport"
                android:textColor="@color/smokey_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDepartTime"
                android:text="05:00"
                android:layout_toStartOf="@id/textView9"
                android:textColor="@color/smokey_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textView9"
                android:text="-"
                android:paddingHorizontal="5dp"
                android:layout_toStartOf="@id/tvArriveTime"
                android:textColor="@color/smokey_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvArriveTime"
                android:text="07:50"
                android:layout_alignParentEnd="true"
                android:textColor="@color/smokey_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvDate"
                android:layout_below="@id/tvDepartTime"
                android:text="29 Nov 2022"
                android:layout_alignParentEnd="true"
                android:textColor="@color/smokey_700"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>