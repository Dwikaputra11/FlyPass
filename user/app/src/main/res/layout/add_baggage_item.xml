<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvNameTraveler"
        android:textSize="16sp"
        android:text="Adult 1"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spBaggage"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.TextView.SpinnerItem"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:entries="@array/baggage_list"
            android:background="@drawable/radius_10dp_border"
            android:padding="5dp"
            />
        <ImageView
            android:id="@+id/ivDropDown"
            android:src="@drawable/ic_round_keyboard_arrow_down_24"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_horizontal|end"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</LinearLayout>