<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="headerText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fieldText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="smallText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="boldGreyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/smokey_700</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="divider">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/smokey_700</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fieldBorder">
        <item name="borderWidth">4dp</item>
        <item name="borderRound">15dp</item>
    </style>

    <style name="buttonBorder">
        <item name="borderWidth">4dp</item>
        <item name="borderRound">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="background">@drawable/bg_button</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_primary</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/smokey_300
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/smokey_500
        </item>
    </style>
</resources>