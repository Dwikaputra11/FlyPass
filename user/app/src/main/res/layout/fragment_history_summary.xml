<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mybooking.HistorySummaryFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/screen_background"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbarLayout"
        layout="@layout/toolbar_general"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cvHistoryDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="15dp"
        android:paddingHorizontal="25dp"
        android:background="@color/white"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/iv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_keyboard_arrow_right_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/color_primary" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_next"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/ivAirlineLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/airplane"
                android:layout_marginEnd="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDepartCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Jakarta"
                        android:textColor="@color/smokey_1100"
                        android:textSize="11sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" - "
                        android:textColor="@color/smokey_1100"
                        android:textSize="11sp"/>
                    <TextView
                        android:id="@+id/tvArriveCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Semarang"
                        android:textColor="@color/smokey_1100"
                        android:textSize="11sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvAirplaneName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Lion Air"
                        android:textColor="@color/smokey_700"
                        android:textSize="11sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" | "
                        android:textAlignment="gravity"
                        android:textColor="@color/smokey_700"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tvDepartDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Rab, 30 Nov 2022"
                        android:textColor="@color/smokey_700"
                        android:textSize="11sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" | "
                        android:textAlignment="gravity"
                        android:textColor="@color/smokey_700"
                        android:textSize="13sp"/>
                    <TextView
                        android:id="@+id/tvDepartTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19.30"
                        android:textColor="@color/smokey_700"
                        android:textSize="11sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text=" - "
                        android:textColor="@color/smokey_700"
                        android:textSize="11sp"/>
                    <TextView
                        android:id="@+id/tvArriveTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="11.40"
                        android:textColor="@color/smokey_700"
                        android:textSize="11sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="15dp"
            android:paddingHorizontal="10dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/smokey_1100"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvTotalPrice"
                app:layout_constraintEnd_toStartOf="@+id/tvTotalPrice"
                app:layout_constraintTop_toTopOf="@+id/tvTotalPrice"
                tools:text="Rp " />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textColor="@color/smokey_1100"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="800.189" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rincian Harga"
                android:textColor="@color/smokey_1100"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADCE3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:baselineAligned="true">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/smokey_700"
                    android:textSize="11sp"
                    tools:text="Penumpang" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text=" ("
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
                <TextView
                    android:id="@+id/tvPassengerQty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1"
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="x)"
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp "
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
                <TextView
                    android:id="@+id/tvPassengerPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="762.500"
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:gravity="start"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Biaya Tambahan"
                android:textSize="11sp"
                android:textColor="@color/smokey_700"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Rp "
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
                <TextView
                    android:id="@+id/tvBaggagePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="24.000"
                    android:textSize="11sp"
                    android:textColor="@color/smokey_700"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/bookingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pesanan Selesai"
            android:textSize="11sp"
            android:textColor="@color/smokey_1100"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pesananmu Telah Selesai"
            android:textSize="11sp"
            android:textColor="@color/smokey_1100"/>
    </LinearLayout>
</LinearLayout>